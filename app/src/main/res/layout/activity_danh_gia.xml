<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Danh_Gia">

    <TextView
        android:id="@+id/tvcolor"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/blue_2" />

    <ImageView
        android:id="@+id/ivback"
        style="@style/back"
        android:src="@drawable/back_white" />

    <TextView
        style="@style/title_screen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:padding="0dp"
        android:text="Đánh giá chất lượng dịch vụ" />

    <TextView
        android:id="@+id/tvtop"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvcolor"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/top_lr" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvtop"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/top_lr"
        android:gravity="center"
        android:text="Thật tuyệt vời nếu chúng tôi nhận được đánh giá của Khách hàng nhằm nâng cao chất lượng dịch vụ."
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvbottom"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@id/tvtop"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/bottom_lr" />

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/tvbottom"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:gravity="center"
        android:text="Vui lòng chọn số sao"
        android:textColor="@color/black" />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/tvbottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:numStars="5"
        android:rating="3"
        android:stepSize="0.5"
        android:theme="@style/MyRatingBar" />
    <EditText
        android:id="@+id/edtComment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@id/tvbottom"
        android:background="@drawable/comment"
        android:layout_margin="20dp"
        android:hint="Hãy chia sẻ nhận xét cho chất lượng dịch vụ này bạn nhé!"
        android:padding="5dp"
        android:gravity="top"/>
    <Button
        android:id="@+id/btnChon"
        style="@style/btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:text="Gửi đánh giá"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_below="@id/edtComment"
        />

</RelativeLayout>