<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <RelativeLayout
                android:id="@+id/rl_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/blue_2"
                android:padding="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="Thông tin phòng"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/img_Back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"
                    android:background="@null"
                    android:src="@drawable/back_white"
                    android:layout_centerVertical="true"/>
            </RelativeLayout>
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/vpiv"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_below="@+id/rl_title"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp" />

            <me.relex.circleindicator.CircleIndicator3
                android:id="@+id/ci"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/vpiv"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="10dp"
                app:ci_drawable="@drawable/ci" />

            <LinearLayout
                android:id="@+id/lntenphong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vpiv"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/iv_heart"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp" />

                <TextView
                    android:id="@+id/tv_tenphong"
                    style="@style/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_danhgia"
                style="@style/tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/vpiv"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="20dp"
                android:drawableEnd="@drawable/star"
                android:textStyle="normal"
                android:textSize="15dp"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/tvGiacu"
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvGiamoi"
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp" />

        <TextView
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Tiện nghi phòng"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tv_tiennghi"
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="Mô tả" />

        <TextView
            android:id="@+id/tv_mota"
            style="@style/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:textSize="15dp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />
        <Button
            android:id="@+id/btnDatphong"
            style="@style/btn"
            android:background="@drawable/btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:text="Đặt phòng"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"/>
    </LinearLayout>
</ScrollView>
