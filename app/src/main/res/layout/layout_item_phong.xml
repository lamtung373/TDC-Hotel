<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/rev_item"
    android:padding="10dp"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="20dp"
    android:orientation="vertical"
    android:layout_marginLeft="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivPhong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/iv"
            android:src="@drawable/phong_example" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvTenphong"
                    style="@style/tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tên phòng" />

                <TextView

                    style="@style/tv"
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:drawableEnd="@drawable/star"
                    android:text="5.0"
                    android:textStyle="normal" />
            </RelativeLayout>


            <TextView
                style="@style/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100 lượt thuê"
                android:textStyle="normal"
                android:textSize="15dp"/>
            <TextView
                android:id="@+id/tvTien"
                style="@style/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chỉ từ: 50.000đ / giờ"
                android:textStyle="normal"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tvMota"
                style="@style/tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80m²: 1 giường - 1 phòng tắm"
                android:textStyle="normal"
                android:textSize="15dp"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>