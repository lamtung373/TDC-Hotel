<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <TextView
        android:textStyle="normal"
        android:id="@+id/tvdichvu"
        style="@style/tv"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:text="Spa" />

    <TextView
        android:textStyle="normal"
        android:id="@+id/tvGia"
        style="@style/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tvdichvu"
        android:text="89000đ/người" />

    <ImageView
        android:id="@+id/ivTru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/ivCong"
        android:layout_marginRight="80dp"
        android:src="@drawable/tru" />

    <EditText
        android:inputType="number"
        android:textStyle="normal"
        android:id="@+id/edtSonguoi"
        style="@style/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_toLeftOf="@id/ivCong"
        android:text="0" />

    <ImageView
        android:id="@+id/ivCong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cong" />
</RelativeLayout>