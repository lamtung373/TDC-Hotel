<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="5dp"
    android:background="@drawable/bg_rv_item"
    android:orientation="horizontal"
    android:padding="10dp">

    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp">

        <ProgressBar
            android:id="@+id/progressBar_itemphong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:progressDrawable="@drawable/refresh"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_item_phong"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:paddingLeft="10dp"
            android:scaleType="centerCrop" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvTenPhong"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên phòng"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvDanhGia"
            style="@style/textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đánh giá"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tvLuotThue"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lượt thuê"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tvLoaiPhong"
            style="@style/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Loa phòng"
            android:textColor="@color/black"
            android:textSize="15dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvGiaThue"
                style="@style/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="80000"
                android:textSize="15dp" />

            <TextView
                style="@style/textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/giờ"
                android:textSize="15dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>